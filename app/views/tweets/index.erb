<h1>Welcome, <%= current_user.username %></h1>

<h3><a href="/users/<%= current_user.slug %>">View Profile</a></h3>
<h3><a href="/tweets/new">Make Tweet</a></h3>
<ul>
<% @tweets.each do |tweet| %>
  <li>
    <h4><%= tweet.user.username %> Tweeted: <%= tweet.content %></h4>
    <a href="tweets/<%= tweet.id %>">View Tweet</a>
  </li>
  
<% end %>
</ul>